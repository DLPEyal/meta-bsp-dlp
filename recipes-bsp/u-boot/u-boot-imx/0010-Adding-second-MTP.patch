From: Oleg Strelecky <oleg_s@eyal-emi.co.il>
Date: Thu, 23 Oct 2025 14:09:13 +0300
Subject: [PATCH] Adding second MTP

---
 arch/arm/dts/imx8mp-evk.dts | 15 +++++++++++++--
 1 file changed, 13 insertions(+), 2 deletions(-)

diff --git a/arch/arm/dts/imx8mp-evk.dts b/arch/arm/dts/imx8mp-evk.dts
index 931c058a56b..829c4ea4aa0 100644
--- a/arch/arm/dts/imx8mp-evk.dts
+++ b/arch/arm/dts/imx8mp-evk.dts
@@ -183,8 +183,18 @@
 		spi-rx-bus-width = <1>;
 	};
 	
-	flash1: mt25qu02gaba@1 {
-		reg = <1>;
+	flash1: mt25qu02gaba@2 {
+		reg = <2>;
+		#address-cells = <1>;
+		#size-cells = <1>;
+		compatible = "micron,mt25qu02g";
+		spi-max-frequency = <80000000>;
+		spi-tx-bus-width = <4>;
+		spi-rx-bus-width = <4>;
+	};
+	
+	flash2: mt25qu02gaba@3 {
+		reg = <3>;
 		#address-cells = <1>;
 		#size-cells = <1>;
 		compatible = "micron,mt25qu02g";
@@ -640,6 +650,7 @@
 	          	MX8MP_IOMUXC_NAND_DATA05__FLEXSPI_B_DATA01 0x00000106
 	          	MX8MP_IOMUXC_NAND_DATA06__FLEXSPI_B_DATA02 0x00000106
 	          	MX8MP_IOMUXC_NAND_DATA07__FLEXSPI_B_DATA03 0x00000106
+	          	MX8MP_IOMUXC_NAND_CE3_B__FLEXSPI_B_SS1_B   0x00000106	
 		>;
 	};
 
